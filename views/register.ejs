<%- include("partials/header.ejs") %>

<body>
  <nav class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-between">
        <div class="text-end">
          <a class="btn btn-lg bg-light" href="/" role="button">Home</a>
        </div>
        <div class="text-end">
          <a class="btn btn-lg btn-warning" href="/Login" role="button">Login</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-6 m-5">
        <div class="card">
          <div class="card-body">
            <form action="/register" method="post">
              <div class="form-group">
                <p class="display-6 mb-4">Register</p>
                <label class="lead" for="email">Email</label>
                <input type="email" class="form-control mb-4" name="username" />
              </div>
              <div class="form-group">
                <label class="lead" for="password">Password</label>
                <input type="password" class="form-control mb-4" name="password" />
              </div>
              <button type="submit" class="btn btn-dark button">Register</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include("partials/footer.ejs") %>
</body>
