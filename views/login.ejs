<%- include("partials/header.ejs") %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6 m-5">
      <div class="card">
        <div class="card-body">
          <form action="/login" method="post">
            <div class="form-group">
              <p class="display-6 mb-4">Login</p>
              <label class="lead" for="email">Email</label>
              <input type="email" class="form-control mb-4" name="username" />
            </div>
            <div class="form-group">
              <label class="lead" for="password">Password</label>
              <input type="password" class="form-control mb-4" name="password" />
            </div>
            <button type="submit" class="btn btn-dark button">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
